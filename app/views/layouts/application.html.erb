<!DOCTYPE html>
<html>
<head>
  <title>Quacker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path do %>
        <%= image_tag("http://i.imgur.com/yxVneY6.png", class: "navbar-brand") %>
      <% end %>
    </div>
    <div class="sign_in navbar-right">
      <% if @current_user %>
      <div class="navbar-text">
        Signed in as <%= @current_user.username %>
        (<%= link_to "Sign Out", sign_in_path, method: :delete %>)
      </div>

      <% else %>
          <%= link_to "Sign In", sign_in_path, class: "btn btn-primary navbar-btn" %>
      <% end %>
    </div>
    <div class="navbar-text">
      <%= link_to "Top Ducks", top_quack_path, class: "navbar-link"%>
    </div>
    <div class="navbar-text">
      <%= link_to "Following", following_path, class: "navbar-link"%>
    </div>
    <div class="navbar-text">
      <%= link_to "Your Ducklings", ducklings_path, class: "navbar-link"%>
    </div>
    <div class="navbar-btn">
      <%= link_to "New Quack!", new_quack_path, class: "btn btn-danger" %>
    </div>
  </div>
</nav>

<div class="container">
  <% if notice %>
    <div class="alert alert-info" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  <% end %>
</div>
<%= yield %>

</body>
</html>
