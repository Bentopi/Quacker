<div class="container">
  <h3 class="text">You are following <%=pluralize(@current_user.following_users.count, 'duck')%>!</h3>
  <% @users.each do |user|%>
    <ul class="list-unstyled">
      <%= user.username %>
      <% if @current_user.following?(user) %>
        <%= link_to "- Unfollow", unfollow_path(user_id: user.id), method: :post%>
      <% else %>
        <%= link_to "- Follow", follow_path(user_id: user.id), method: :post%>
      <% end %>
      </li>
    </ul>
  <% end %>
</div>
